{
  "compilerOptions": {
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "types": ["bun-types"],
    "isolatedModules": true,
    "lib": ["esnext", "DOM", "DOM.Iterable"],
    "moduleResolution": "node",
    "module": "esnext",
    "target": "esnext",
    "ignoreDeprecations": "5.0"
  },
  "include": [
    "./lib/**/*.js",
    "./www/**/*.svelte"
  ],
  "exclude": [
    "./node_modules/**"
  ]
}